<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purewhite"
    tools:context=".UpdateStudent">

    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="418dp"
        android:layout_height="187dp"
        android:background="@color/themecolor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/editTextTextPersonName15"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:background="@color/purewhite"
            android:fontFamily="@font/roboto_light"
            android:ems="10"

            android:hint="Enter Admission Number"
            android:inputType="textPersonName"
            android:paddingLeft="8dp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:layout_gravity="bottom|center"
            android:background="@color/purewhite"
            android:fontFamily="@font/lato_bold"
            android:text="Search"
            android:textColor="@color/themecolor"
            android:textSize="18sp" />
    </FrameLayout>

    <EditText
        android:id="@+id/editTextTextPersonName16"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/edit_background_profile"
        android:ems="10"
        android:hint="Name"
        android:fontFamily="@font/roboto_light"
        android:inputType="textPersonName"
        android:textColorHint="#2196F3"
        android:paddingLeft="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout2" />

    <EditText
        android:id="@+id/editTextTextPersonName17"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/edit_background_profile"
        android:ems="10"
        android:fontFamily="@font/roboto_light"
        android:hint="Admission Number"
        android:inputType="textPersonName"
        android:textColorHint="#2196F3"
        android:paddingLeft="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName16" />

    <EditText
        android:id="@+id/editTextTextPersonName18"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/edit_background_profile"
        android:ems="10"
        android:hint="Branch"
        android:inputType="textPersonName"
        android:textColorHint="#2196F3"
        android:paddingLeft="8dp"
        android:fontFamily="@font/roboto_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName17" />

    <EditText
        android:id="@+id/editTextTextPersonName19"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/edit_background_profile"
        android:ems="10"
        android:hint="Semester"
        android:inputType="textPersonName"
        android:fontFamily="@font/roboto_light"
        android:paddingLeft="8dp"
        android:textColorHint="#2196F3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName18" />

    <Button
        android:id="@+id/button6"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="28dp"
        android:background="@color/themecolor"
        android:fontFamily="@font/lato_bold"
        android:text="Update"

        android:textAllCaps="false"
        android:textColor="@color/purewhite"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName21"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/editTextTextPersonName21"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/edit_background_profile"
        android:ems="10"
        android:hint="BusID"
        android:inputType="textPersonName"
        android:paddingLeft="8dp"
        android:fontFamily="@font/roboto_light"
        android:textColorHint="#2196F3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName19" />
</androidx.constraintlayout.widget.ConstraintLayout>