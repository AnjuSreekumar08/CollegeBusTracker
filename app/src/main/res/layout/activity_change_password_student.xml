<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purewhite"
    tools:context=".ChangePasswordStudent">

    <EditText
        android:id="@+id/pwdstudent"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="140dp"
        android:background="@drawable/edit_background_profile"
        android:paddingLeft="8dp"
        android:ems="10"
        android:fontFamily="@font/roboto_light"
        android:hint="Password"
        android:textColorHint="#2196F3"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/repwdstudent"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:textColorHint="#2196F3"
        android:background="@drawable/edit_background_profile"
        android:paddingLeft="8dp"
        android:ems="10"
        android:fontFamily="@font/roboto_light"
        android:hint="Retype Password"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newpwdstudent" />

    <EditText
        android:id="@+id/newpwdstudent"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:textColorHint="#2196F3"

        android:background="@drawable/edit_background_profile"
        android:paddingLeft="8dp"
        android:ems="10"
        android:fontFamily="@font/roboto_light"
        android:hint="New Paasword"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pwdstudent" />

    <Button
        android:id="@+id/changepwdstudent"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="#2196F3"
        android:fontFamily="@font/lato_bold"
        android:text="Change"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/repwdstudent"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>